//FrequencyList

import java.io.*;
import java.util.*;
class FrequencyList
{
public static void main(String args[]) throws Exception
{
Console con = System.console();
String str;
int i=0;

HashMap map = new HashMap();
HashSet set = new HashSet();
//Here we will enter lyrics.txt
System.out.println("enter file name : ");
//Read the file
str = con.readLine();
FileInputStream find = new FileInputStream(str);

int ch;
String string=new String();
while((ch=find.read())!=-1)
{
string+=(char)ch+"";
}
StringTokenizer st = new StringTokenizer(string);
while(st.hasMoreTokens())
{
String s =st.nextToken();
map.put(i+"",s);
set.add(s);
i++;
}
Iterator iter = set.iterator();
System.out.println("output of the word frequency list: ");
while(iter.hasNext())
{
String str1;
int count=0;

str1=(String)iter.next();


for(int j=0; j<i ; j++)
{
String str2;
str2=(String)map.get(j+"");
if(str1.equals(str2))
count++;
}

System.out.printf("%d:%s\n",count,str1);
}

}
}
